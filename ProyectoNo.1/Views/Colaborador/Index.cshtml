@model Models.ColaboradorDTO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    @using (Html.BeginForm("Add", "Colaborador", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-header">
                Agregar nuevo colaborador
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">

                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label>Cédula</label>
                        @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label>Nombre</label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label>Apellidos</label>
                        @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <label>Feecha Registro</label>
                        @Html.EditorFor(model => model.FechaRegistro, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FechaRegistro, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <label>Estado</label>
                        @Html.DropDownListFor(model => model.Estado, ViewBag.EstadoList as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    </div>

                </div>


                <div class="mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>

    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</section>

